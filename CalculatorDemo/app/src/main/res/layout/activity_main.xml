<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/MC"
                style="@style/btn1"
                android:text="MC" />

            <Button
                style="@style/btn1"
                android:text="MR" />

            <Button
                style="@style/btn1"
                android:text="MS" />

            <Button
                style="@style/btn1"
                android:text="M+" />

            <Button
                style="@style/btn1"
                android:text="M-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                style="@style/btn1"
                android:text="⬅" />

            <Button
                style="@style/btn1"
                android:text="CE" />

            <Button
                style="@style/btn1"
                android:text="C" />

            <Button
                style="@style/btn1"
                android:text="+-" />

            <Button
                style="@style/btn1"
                android:text="√" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                style="@style/btn1"
                android:text="7" />

            <Button
                style="@style/btn1"
                android:text="8" />

            <Button
                style="@style/btn1"
                android:text="9" />

            <Button
                style="@style/btn1"
                android:text="/" />

            <Button
                style="@style/btn1"
                android:text="%" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                style="@style/btn1"
                android:text="4" />

            <Button
                style="@style/btn1"
                android:text="5" />

            <Button
                style="@style/btn1"
                android:text="6" />

            <Button
                style="@style/btn1"
                android:text="*" />

            <Button
                style="@style/btn1"
                android:text="1/x" />
        </TableRow>


    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">


        <Button
            android:id="@+id/btn1"
            style="@style/btn1"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            style="@style/btn1"
            android:layout_alignTop="@+id/btn1"
            android:layout_toRightOf="@+id/btn1"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            style="@style/btn1"
            android:layout_alignTop="@+id/btn2"
            android:layout_toRightOf="@+id/btn2"
            android:text="3" />

        <Button
            android:id="@+id/btn_sub"
            style="@style/btn1"
            android:layout_alignTop="@+id/btn3"
            android:layout_toRightOf="@+id/btn3"
            android:text="-" />

        <Button
            android:layout_width="76dp"
            android:layout_height="120dp"
            android:layout_alignTop="@+id/btn_sub"
            android:layout_toRightOf="@+id/btn_sub"
            android:text="=" />


        <Button
            android:id="@+id/btn0"
            style="@style/btn1"
            android:layout_width="150dp"
            android:layout_alignBottom="@+id/btn1"
            android:layout_marginBottom="-60dp"
            android:text="0" />
        <Button
            android:id="@+id/btn_dot"
            style="@style/btn1"
            android:layout_alignTop="@+id/btn0"
            android:layout_toRightOf="@+id/btn0"
            android:text="." />
        <Button
            android:id="@+id/btn_add"
            style="@style/btn1"
            android:layout_alignTop="@+id/btn_dot"
            android:layout_toRightOf="@+id/btn_dot"
            android:text="+" />

    </RelativeLayout>
</LinearLayout>